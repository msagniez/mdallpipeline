{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/mdallpipeline/master/assets/schema_input.json",
    "title": "nf-core/mdallpipeline pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "lib_type": {
                "type": "string",
                "enum": ["cDNA", "dRNA"],
                "errorMessage": "lib_type must be either 'cDNA' or 'dRNA'"
            },
            "fastq_path": {
                "type": "string",
                "format": "directory-path",
                "exists": true,
                "errorMessage": "Path to FastQ directory must be provided and must exist"
            },
            "genome_ref": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "errorMessage": "Path to reference file must be provided and must exist"
            },
            "transcriptome_ref": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "errorMessage": "Path to reference file must be provided and must exist"
            }
        },
        "required": ["sample", "lib_type","fastq_path","genome_ref","transcriptome_ref"]
    }
}
